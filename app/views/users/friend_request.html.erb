<div class="container">
  <table class="table">
    <thead>
      <tr>
        <th>Profile Photo</th>
        <th>Title</th>
        <th>Request From</th>
      </tr>
    </thead>
    <tbody>
      <%@friend_requests.each do |friend|%>   
        <tr>
          <td><%=image_tag friend.user.image.url(:thumb)%></td>
          <td><%=friend.user.title%></td>
          <td><%="#{friend.user.fname.capitalize} #{friend.user.lname.capitalize}"%></td>   
          <td><%=link_to 'Accept',"/accept_friend_request/#{friend.id}",method: :post%></td>
          <td><%=link_to 'Reject',"reject_friend_request/#{friend.id}",method: :post%></td>
        </tr>
      <%end%>
    <tbody>
  </table>
</div>
  
  

<%=link_to 'Back',"/user_login/#{current_user.id}"%>