<div class = "container">
  <table class = "table">
    <thead>
      <tr>
        <th>Profile Photo</th>
        <th>Title</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Gender</th>
	      <th>Email</th>
        <th>Mobile_Number</th>
        <th>Status</th>
      </tr>
    </thead>
    <tbody>
      <%current_user.friend_requests.each do |request|%>
        <%@user = User.find(request.friend_id)%>
       
      <tr>
      <%if request.slam_book_status == "send"%>
        <td><%=image_tag @user.image.url(:thumb)%></td>
        <td><%=@user.title%></td>
        <td><%=@user.fname%></td>
        <td><%=@user.lname%></td>
        <td><%=@user.gender%></td>
  	    <td><%=@user.email%></td>
        <td><%=@user.mobile%></td>
        <td><%=request.slam_book_status%></td>
      <%end%>
      </tr>
      <%end%>
    </tbody>
  </table>
  <%=link_to 'Back',"/user_login/#{current_user.id}"%>
</div>

